@model StudentsApp.Models.StudentModel

@{
    ViewBag.Title = "Sign up";
    Layout = "~/Views/_Layout.cshtml";
}

<h2>Registration Form</h2> <br />

@using (Html.BeginForm("Register", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Firstname, new { @class = "col-md-1 control-label" })
        <div class="col-md-3">
            @Html.TextBoxFor(m => m.Firstname, new { @class = "form-control", required = "required" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Lastname, new { @class = "col-md-1 control-label" })
        <div class="col-md-3">
            @Html.TextBoxFor(m => m.Lastname, new { @class = "form-control", required = "required" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Middlename, new { @class = "col-md-1 control-label" })
        <div class="col-md-3">
            @Html.TextBoxFor(m => m.Middlename, new { @class = "form-control", required = "required" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Age, new { @class = "col-md-1 control-label" })
        <div class="col-md-3">
            @Html.TextBoxFor(m => m.Age, new { @class = "form-control", required = "required" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-1 control-label" })
        <div class="col-md-3">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", required = "required"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Phone, new { @class = "col-md-1 control-label" })
        <div class="col-md-3">
            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", required = "required" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Address, new { @class = "col-md-1 control-label" })
        <div class="col-md-3">
            @Html.TextBoxFor(m => m.Address, new { @class = "form-control", required = "required" })
        </div>
    </div>
    <br />
    <div class="col-md-offset-1">
        <input type="submit" class="btn btn-primary" value="Register" />
    </div>
}